pipeline {
    agent any
    tools {
  maven 'mvn'
}

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        } 
        stage ('git') {
            steps {
                
            git 'https://github.com/anitha8242/hello-world.git'
            }
        }
        stage('build') {
            steps {
                sh 'mvn package'
            }
        }

    }
}
